<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/textViewFormularios"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="13dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:text="TextView"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editTextFormulariosCheckbox"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textViewFormularios"
        android:layout_marginLeft="18dp"
        android:layout_toRightOf="@+id/textViewFormularios"
        android:ems="10" >
    </EditText>

    <CheckBox
        android:id="@+id/checkBoxFormularios"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/editTextFormulariosCheckbox"
        android:layout_below="@+id/editTextFormulariosCheckbox"
        android:layout_marginRight="38dp"
        android:layout_marginTop="27dp"
        android:text="CheckBox"
        android:textSize="18sp" />

</RelativeLayout>