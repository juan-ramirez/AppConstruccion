<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/textViewFormulariosSpinner"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="60dp"
        android:text="TextView"
        android:textSize="28sp" />

    <EditText
        android:id="@+id/editTextFormulariosAlfaCheckbox"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textViewFormulariosSpinner"
        android:layout_marginLeft="18dp"
        android:layout_toRightOf="@+id/textViewFormulariosSpinner"
        android:ems="10" >

    </EditText>

    <EditText
        android:id="@+id/editTextFormulariosNumericoCheckbox"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textViewFormulariosNumericoCheckbox"
        android:layout_marginLeft="18dp"
        android:layout_toRightOf="@+id/textViewFormulariosNumericoCheckbox"
        android:ems="10"
        android:inputType="text" >

    </EditText>

    <TextView
        android:id="@+id/textViewFormulariosNumericoCheckbox"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewFormulariosSpinner"
        android:layout_marginTop="73dp"
        android:layout_toLeftOf="@+id/editTextFormulariosAlfaCheckbox"
        android:text="TextView"
        android:textSize="28sp" />
    
    <EditText
        android:id="@+id/editTextFormulariosNumerico"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textViewFormulariosNumerico"
        android:layout_marginLeft="18dp"
        android:layout_toRightOf="@+id/textViewFormulariosNumerico"
        android:ems="10"
        android:inputType="number" >

    </EditText>

    <TextView
        android:id="@+id/textViewFormulariosNumerico"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewFormulariosNumericoCheckbox"
        android:layout_marginTop="73dp"
        android:layout_toLeftOf="@+id/editTextFormulariosNumericoCheckbox"
        android:text="TextView"
        android:textSize="28sp" />
    
      <EditText
          android:id="@+id/editTextFormulariosDecimal"
          android:layout_width="340dp"
          android:layout_height="wrap_content"
          android:layout_alignBottom="@+id/textViewFormulariosDecimal"
          android:layout_marginLeft="18dp"
          android:layout_toRightOf="@+id/textViewFormulariosDecimal"
          android:ems="10"
          android:inputType="numberDecimal" >

    </EditText>

    <TextView
        android:id="@+id/textViewFormulariosDecimal"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewFormulariosNumerico"
        android:layout_marginTop="73dp"
        android:layout_toLeftOf="@+id/editTextFormulariosNumerico"
        android:text="TextView"
        android:textSize="28sp" />
    
    
  
</RelativeLayout>
