            android:label="Proyectos"
            android:parentActivityName="com.movilapps.appconstruccion.MainActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.movilapps.appconstruccion.EnviarFormulariosActivity"
            android:label="Proyectos"
            android:parentActivityName="com.movilapps.appconstruccion.MainActivity"
            android:screenOrientation="portrait" >
